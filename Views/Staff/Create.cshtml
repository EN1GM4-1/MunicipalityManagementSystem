@model MunicipalityManagementSystem.Models.Staff

@{
    ViewData["Title"] = "Create Staff";
}

<h2>Add New Staff Member</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" required />
    </div>
    <div class="form-group"></div>
        <label asp-for="Position"></label>
        <input asp-for="Position" type="email" class="form-control" required />
    </div>
    <div class="form-group"></div>
        <label asp-for="Department"></label>
        <input asp-for="Department" type="email" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
