@model MunicipalityManagementSystem.Models.Staff


@{
    ViewData["Title"] = "Delete";
}

@if (Model == null)
{
    <div class="alert alert-danger">Staff member not found.</div>
}
else
{
    <div>
    <p><strong>First Name:</strong> @Model.FullName</p>
    <p><strong>Department:</strong> @Model.Department</p>
    <p><strong>Position:</strong> @Model.Position</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="StaffID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


    
}


