@model IEnumerable<MunicipalityManagementSystem.Models.Staff>

@{
    ViewData["Title"] = "Staff List";
}

<h2>Staff List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Staff</a>
    <a asp-action="Edit" class="btn btn-primary">Edit Staff</a>
    <a asp-action="Delete" class="btn btn-primary">Delete Staff</a>
    
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Position)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Position)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
{
    @foreach (var staff in Model)
    {
        <tr>
                <td>@staff.FullName</td>
                <td>@staff.Position</td>
                <td>@staff.Email</td>
                <td>@staff.Position</td>
                <td>@staff.Department</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@staff.StaffID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@staff.StaffID" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@staff.StaffID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
    }
}
else
{
    <tr><td colspan="8">No citizens found.</td></tr>
}

    </tbody>
</table>
